# AI Recycle-to-Market Generator - Environment Configuration
# Copy this to .env and fill in your actual values

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration (for LangGraph checkpointing and temp storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Gemini API Configuration (REQUIRED for AI functionality)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Alternative API key name (takes precedence if set)
# GOOGLE_API_KEY=your_gemini_api_key_here

# Other integrations (legacy - not used in new system)
TRELLIS_API_KEY=your_trellis_key
REPLICATE_API_KEY=your_replicate_key

# Development/Production Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# LangGraph Configuration
LANGGRAPH_TIMEOUT=300
LANGGRAPH_MAX_RETRIES=3

# Performance Tuning
MAX_CONCURRENT_WORKFLOWS=10
INGREDIENT_DISCOVERY_TIMEOUT=30
IMAGE_GENERATION_TIMEOUT=60